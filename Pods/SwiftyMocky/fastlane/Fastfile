fastlane_version "2.51.0"

default_platform :ios

platform :ios do
    desc "Runs all the tests"
    lane :test do
        scan(scheme: "Mocky_Tests_iOS")
    end
end

platform :tvos do
    desc "Runs all the tests"
    lane :test do
        scan(
            scheme: "Mocky_Tests_tvOS",
            devices: ["Apple TV"]
        )
    end

    desc "Runs all the tests on tvOS 13.x"
    lane :test_13 do
        scan(
            scheme: "Mocky_Tests_tvOS",
            devices: ["Apple TV (13.2)"]
        )
    end
end

platform :mac do
    desc "Runs all the tests"
    lane :test do
        scan(scheme: "Mocky_Tests_macOS")
    end
end
